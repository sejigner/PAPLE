<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MyPageFragment"
    android:background="@color/bg_chat_log"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/cl_info_profile"
        android:background="@color/white"
        android:paddingHorizontal="20dp"
        android:paddingVertical="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_title_profile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="#a7a7a7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:text="@string/user_info"/>

        <TextView
            android:id="@+id/tv_nickname_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:scrollbarSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/tv_title_profile"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_gender_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gender_female"
            android:layout_marginStart="12dp"
            android:scrollbarSize="14sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/gray_2"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:background="@drawable/round_edit_text"
            app:layout_constraintTop_toTopOf="@id/tv_nickname_profile"
            app:layout_constraintBottom_toBottomOf="@id/tv_nickname_profile"
            app:layout_constraintStart_toEndOf="@id/tv_nickname_profile"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_birth_title"
            app:layout_constraintTop_toBottomOf="@id/tv_nickname_profile"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:scrollbarSize="14sp"
            android:text="@string/birth_date"/>

        <TextView
            android:id="@+id/tv_birth_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/tv_birth_title"
            app:layout_constraintTop_toTopOf="@id/tv_birth_title"
            app:layout_constraintBottom_toBottomOf="@id/tv_birth_title"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/cl_info_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="14sp"
            android:layout_marginBottom="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_sign_out_my_page"
            android:text="@string/log_out"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>