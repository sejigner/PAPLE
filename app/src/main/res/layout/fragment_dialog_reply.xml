<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_frame"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.FragmentDialogReply">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginStart="8dp"
            android:id="@+id/iv_back_reply"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/cl_content_message"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="10dp"
            android:layout_marginTop="4dp"
            android:id="@+id/cl_content_message"
            android:background="@drawable/dialog_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_back_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:id="@+id/tv_dialog_message_first"
                android:textAlignment="center"
                android:text="paperplane message"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_marginStart="16dp"
                android:textColor="@color/black"
                android:id="@+id/tv_dialog_distance_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_dialog_message_first"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:text="distance"
                android:textSize="12sp"/>
            <TextView
                android:layout_marginEnd="16dp"
                android:textColor="@color/black"
                android:id="@+id/tv_dialog_time_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_dialog_message_first"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:text="time"
                android:textSize="12sp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_dialog_discard_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="버리기"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/iv_back_reply"
            app:layout_constraintTop_toTopOf="@id/iv_back_reply"
            app:layout_constraintBottom_toBottomOf="@id/iv_back_reply"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="10dp"
            android:layout_marginTop="4dp"
            android:id="@+id/cl_content_reply"
            android:background="@drawable/dialog_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_content_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:textColor="@color/black"
                android:id="@+id/et_dialog_message_first"
                android:textAlignment="center"
                android:text="reply"
                android:textSize="18sp"
                android:padding="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_dialog_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="보내기"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_content_reply"
            android:layout_marginEnd="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>