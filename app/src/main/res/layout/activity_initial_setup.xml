<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_initialSetting"
    tools:context=".InitialSetupActivity">

    <ImageView
        android:id="@+id/iv_welcome"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:src="@drawable/bg_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/request_info"
        android:textColor="@color/black2"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_welcome"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_nickname_initial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/initial_nickname"
        android:textColor="@color/black1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_welcome" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/initial_warning"
        android:textColor="@color/black2"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_nickname_initial"
        app:layout_constraintStart_toEndOf="@id/tv_nickname_initial"
        app:layout_constraintTop_toTopOf="@id/tv_nickname_initial" />

    <ImageView
        android:id="@+id/iv_nickname_box"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_edit_text_input"
        app:layout_constraintTop_toBottomOf="@id/tv_nickname_initial" />

    <EditText
        android:id="@+id/et_nickname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@null"
        android:fontFamily="@font/noto_sans_cjk_kr_regular"
        android:hint="@string/initial_nickname_hint"
        android:imeOptions="actionDone"
        android:includeFontPadding="false"
        android:inputType="text"
        android:maxLength="10"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/black1"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iv_nickname_box"
        app:layout_constraintEnd_toEndOf="@id/iv_nickname_box"
        app:layout_constraintStart_toStartOf="@id/iv_nickname_box"
        app:layout_constraintTop_toTopOf="@id/iv_nickname_box" />

    <TextView
        android:id="@+id/tv_birth_year_initial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/initial_nickname"
        android:textColor="@color/black1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_nickname_box" />

    <ImageView
        android:id="@+id/iv_birth_year_box"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_edit_text_input"
        app:layout_constraintTop_toBottomOf="@id/tv_birth_year_initial" />

    <EditText
        android:id="@+id/et_birth_year"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@null"
        android:fontFamily="@font/noto_sans_cjk_kr_regular"
        android:hint="@string/initial_birth_year_hint"
        android:imeOptions="actionDone"
        android:includeFontPadding="false"
        android:inputType="number"
        android:textColor="@color/black1"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_birth_year_box"
        app:layout_constraintEnd_toEndOf="@id/iv_birth_year_box"
        app:layout_constraintStart_toStartOf="@id/iv_birth_year_box"
        app:layout_constraintTop_toTopOf="@id/iv_birth_year_box" />


    <TextView
        android:id="@+id/duplication_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_nickname_box" />

    <ProgressBar
        android:id="@+id/duplication_check_progress_bar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="20dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_nickname_box" />

    <TextView
        android:id="@+id/tv_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/user_gender"
        android:textColor="@color/black1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_birth_year_box" />

    <ImageView
        android:id="@+id/iv_gender_box"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_edit_text_input"
        app:layout_constraintTop_toBottomOf="@id/tv_gender" />

    <Spinner
        android:id="@+id/spinner_gender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="@id/iv_gender_box"
        app:layout_constraintEnd_toEndOf="@id/iv_gender_box"
        app:layout_constraintStart_toStartOf="@id/iv_gender_box"
        app:layout_constraintTop_toTopOf="@id/iv_gender_box" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="@string/initial_guidance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        android:textColor="@color/black2"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/tv_initial_start"


    <TextView
        android:id="@+id/tv_initial_start"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:gravity="center"
        android:layout_marginBottom="55dp"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/noto_sans_cjk_kr_regular"
        android:background="@drawable/selector_confirm"
        android:text="@string/initial_start"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>