<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundTransparent"
    tools:context=".fragment.FragmentDialogReplied">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/iv_back_reply_replied"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_back_reply_replied">

            <ImageView
                android:id="@+id/iv_report_replied"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_report"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_report_replied"
                android:layout_width="45dp"
                android:layout_height="20dp"
                android:layout_marginStart="4dp"
                android:text="신고하기"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_report_replied"
                app:layout_constraintStart_toEndOf="@id/iv_report_replied"
                app:layout_constraintTop_toTopOf="@id/iv_report_replied" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintBottom_toTopOf="@id/cl_bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/iv_delete_replied"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_delete"
                app:layout_constraintBottom_toTopOf="@id/tv_dialog_discard_replied"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_dialog_discard_replied"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="버리기"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/iv_back_reply_replied"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="95dp"
            android:src="@drawable/ic_close"
            app:layout_constraintBottom_toTopOf="@id/cl_message"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginHorizontal="16dp"
            android:id="@+id/cl_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_frame"
            android:paddingHorizontal="16dp"
            android:paddingVertical="22dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/tv_dialog_distance_replied"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="거리에서\n비행기가 날아왔어요!"
                android:textColor="@color/paperplane_text"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/dialog_divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/dialog_divider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#ECECEC"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_dialog_distance_replied" />

            <TextView
                android:layout_marginTop="12dp"
                android:id="@+id/tv_dialog_my_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="my message"
                android:textAlignment="center"
                android:textColor="@color/txt_gray"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/dialog_divider" />

            <TextView
                android:id="@+id/tv_dialog_time_my_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="time"
                android:textColor="#c4c4c4"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_dialog_my_message" />

            <View
                android:id="@+id/dialog_divider_second"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginVertical="12dp"
                android:background="#ECECEC"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_dialog_time_my_message" />

            <ImageView
                android:layout_marginTop="6dp"
                android:id="@+id/iv_reply"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_reply"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_dialog_message_replied"
                app:layout_constraintTop_toBottomOf="@id/dialog_divider_second" />

            <TextView
                android:layout_marginTop="6dp"
                android:id="@+id/tv_dialog_message_replied"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="reply"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_reply" />

            <TextView
                android:id="@+id/tv_dialog_time_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="time"
                android:textColor="#c4c4c4"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_dialog_message_replied" />



        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_bottom"
            android:layout_width="match_parent"
            android:layout_height="164dp"
            app:layout_constraintBottom_toBottomOf="parent">
            <com.google.android.material.card.MaterialCardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_top"
                android:layout_width="match_parent"
                android:layout_height="164dp"
                card_view:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="5dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="9dp"
                card_view:cardElevation="8dp" >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:paddingHorizontal="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_start_chat"
                        android:textStyle="bold"
                        card_view:layout_constraintTop_toTopOf="parent"
                        card_view:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="18dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/montserrat_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/start_dialog_replied"
                        android:textSize="18sp"/>

                    <TextView
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:layout_marginTop="22dp"
                        android:id="@+id/tv_chat_no"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="아니오"
                        android:background="@drawable/btn_dialog_no"
                        card_view:layout_constraintTop_toBottomOf="@id/tv_start_chat"
                        card_view:layout_constraintStart_toStartOf="parent"
                        card_view:layout_constraintWidth_percent="0.3"
                        />
                    <TextView
                        android:id="@+id/tv_chat_yes"
                        android:textColor="@color/white"
                        android:background="@drawable/btn_dialog_yes"
                        android:textSize="18dp"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="네, 대화 나눠볼래요"
                        android:layout_marginStart="6dp"
                        card_view:layout_constraintEnd_toEndOf="parent"
                        card_view:layout_constraintStart_toEndOf="@id/tv_chat_no"
                        card_view:layout_constraintTop_toTopOf="@id/tv_chat_no"
                        card_view:layout_constraintBottom_toBottomOf="@id/tv_chat_no"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>