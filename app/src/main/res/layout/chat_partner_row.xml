<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:paddingVertical="4dp">


    <TextView
        android:id="@+id/tv_message_partner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_chat_partner_row"
        android:maxWidth="240dp"
        android:minWidth="80dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_time_partner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:maxWidth="240dp"
        android:textColor="@color/txt_gray"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_message_partner"
        app:layout_constraintStart_toEndOf="@id/tv_message_partner" />


</androidx.constraintlayout.widget.ConstraintLayout>