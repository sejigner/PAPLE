<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:fontFamily">@font/noto_sans_cjk_kr_regular</item>
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>

    <style name="guide_body">

        <item name="fontFamily">@font/noto_sans_cjk_kr_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="lineHeight">22dp</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="phone_auth_title">

        <item name="android:textSize">
            24sp
        </item>
        <item name="android:fontFamily">@font/noto_sans_cjk_kr_regular</item>
        <item name="android:textColor">
            #000000
        </item>

    </style>

    <style name="fragment_chat_title">
        <item name="android:fontFamily">@font/noto_sans_cjk_kr_regular</item>
        <item name="android:textSize">
            20sp
        </item>

        <item name="android:textStyle">
            bold
        </item>

        <item name="android:textColor">
            #000000
        </item>

    </style>
    <style name="count_number">
        <item name="android:fontFamily">@font/noto_sans_cjk_kr_regular</item>
        <item name="android:textSize">
            20sp
        </item>
        <item name="android:textStyle">
            bold
        </item>
        <item name="android:textColor">
            @color/paperplane_theme
        </item>
    </style>

    <style name="phone_auth_info">
        <item name="android:fontFamily">@font/noto_sans_cjk_kr_regular</item>

        <item name="android:textSize">
            14sp
        </item>

        <item name="android:textColor">
            #A7A7A7
        </item>

    </style>

    <style name="phone_auth_et">
        <item name="android:fontFamily">@font/noto_sans_cjk_kr_regular</item>

        <item name="android:textSize">
            24sp
        </item>

        <item name="android:textColor">
            #A7A7A7
        </item>

    </style>

    <style name="otp_title">
        <item name="android:fontFamily">@font/noto_sans_cjk_kr_regular</item>

        <item name="android:textSize">
            24sp
        </item>
        <item name="android:textStyle">
            bold
        </item>

        <item name="android:textColor">
            #000000
        </item>
    </style>

    <style name="otp_subtitle">
        <item name="android:fontFamily">@font/noto_sans_cjk_kr_regular</item>

        <item name="android:textSize">
            14sp
        </item>

        <item name="android:textColor">
            #A7A7A7
        </item>
    </style>

</resources>